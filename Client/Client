    pass

actions = { '1' : register,
            '2' : send,
            '3' : receive,
            '4' : exit_program }

def main():
    initialize()
    sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    server_addr = ('localhost', 10000)
    sock.connect(server_addr)
    print('connected to ip:{} port:{}'.format(*server_addr))
    print('\n')
    try:
        actions[menu()](sock)
        amount_received = 0
        amount_expected = 16

    finally:
        print('closing socket')
        sock.close()

    




if __name__ == '__main__':
    main()
